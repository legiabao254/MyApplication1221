<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".TopUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nạp tiền vào Ví"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Khu vực nhập số tiền -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền cần nạp (VNĐ)"
        app:prefixText="VNĐ "
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền nạp tối thiểu là 10,000 VNĐ"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_create_top_up_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo yêu cầu nạp tiền"
        android:padding="12dp"
        android:textSize="18sp"/>

    <ProgressBar
        android:id="@+id/progress_bar_top_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>


    <!-- ================================================================= -->
    <!-- ==== KHU VỰC HIỂN THỊ THÔNG TIN CHUYỂN KHOẢN (BAN ĐẦU BỊ ẨN) ==== -->
    <!-- ================================================================= -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng chuyển khoản chính xác thông tin dưới đây"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Số tài khoản -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tài khoản:" />
            <TextView
                android:id="@+id/tv_bank_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="40025042004" />

            <!-- Ngân hàng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngân hàng:"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                tools:text="MBBank" />

            <!-- Nội dung chuyển khoản -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung chuyển khoản (rất quan trọng):"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/holo_red_dark"/>
            <TextView
                android:id="@+id/tv_payment_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="#E0E0E0"
                android:padding="8dp"
                tools:text="NAPTIEN167895432" />

            <Button
                android:id="@+id/btn_copy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao chép nội dung"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

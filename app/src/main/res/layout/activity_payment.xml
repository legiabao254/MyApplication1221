<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ParkingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHIẾU THANH TOÁN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_border"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvPaymentSlotId"
            style="@style/PaymentDetailText"
            tools:text="Slot: A1" />

        <TextView
            android:id="@+id/tvPaymentLicensePlate"
            style="@style/PaymentDetailText"
            tools:text="Biển số xe: 51G-123.45" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/tvPaymentStartTime"
            style="@style/PaymentDetailText"
            tools:text="Bắt đầu: 10:00:00 11/11/2025" />

        <TextView
            android:id="@+id/tvPaymentEndTime"
            style="@style/PaymentDetailText"
            tools:text="Kết thúc: 14:00:00 11/11/2025" />

        <TextView
            android:id="@+id/tvPaymentDuration"
            style="@style/PaymentDetailText"
            android:textStyle="bold"
            tools:text="Tổng thời gian: 4 giờ" />

        <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#388E3C" android:layout_marginVertical="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG PHÍ THANH TOÁN"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvPaymentTotalFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:layout_gravity="center_horizontal"
            tools:text="20.000 VNĐ" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPaymentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        tools:text="Tài khoản: user@example.com" />

    <Button
        android:id="@+id/btnClosePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOÀN TẤT VÀ ĐÓNG"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

</LinearLayout>